<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/button_alt_background_color">


    <android.widget.Button
        android:id="@+id/button_calendar"
        android:shape="rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_action_calendar"
        android:background="@drawable/button_alt"
        />

    <android.widget.Button
        android:id="@+id/button_list"
        android:shape="rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_action_list"
        android:background="@drawable/button_alt"
        />

    <android.widget.Button
        android:id="@+id/button_remove"
        android:shape="rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_action_remove"
        android:background="@drawable/button_alt"
        />

    <android.widget.Button
        android:id="@+id/button_edit"
        android:shape="rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_action_return"
        android:background="@drawable/button_alt"
        />


</LinearLayout>