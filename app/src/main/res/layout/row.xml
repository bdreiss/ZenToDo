<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"/>


        <TextView
            android:id="@+id/task"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button_menu"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableEnd="@drawable/ic_action_menu"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_alt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/button_alt_background_color">

        <android.widget.Button
            android:id="@+id/button_edit"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/button_alt_offset"
            android:drawableEnd="@drawable/ic_action_edit"
            android:background="@drawable/button_alt"
            />

        <android.widget.Button
            android:id="@+id/button_calendar"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/button_alt_offset"
            android:drawableEnd="@drawable/ic_action_calendar"
            android:background="@drawable/button_alt"
            />

        <android.widget.Button
            android:id="@+id/button_recurrence"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/button_alt_offset"
            android:drawableEnd="@drawable/ic_action_recurrence"
            android:background="@drawable/button_alt"
            />
        <android.widget.Button
            android:id="@+id/button_list"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/button_alt_offset"
            android:drawableEnd="@drawable/ic_action_list"
            android:background="@drawable/button_alt"
            />

        <android.widget.Button
            android:id="@+id/button_back"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/button_alt_offset"
            android:drawableEnd="@drawable/ic_action_back"
            android:background="@drawable/button_alt"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_list_view"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"

            />

        <android.widget.Button
            android:id="@+id/button_back_edit"
            android:shape="rectangle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="center"
            android:paddingEnd="18dp"
            android:drawableEnd="@drawable/ic_action_back"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>

</FrameLayout>